{
	"compilerOptions": {
		"outDir": "dist",
		"module": "ESNext",
		"target": "ES2020",
		"jsx": "react-jsx",
		"declaration": false,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strict": true,
		"ignoreDeprecations": "5.0",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": ["./src/*"],
			"@type/*": ["./types/*"],
			"@utils/*": ["./src/utils/*"]
		},
		"types": ["bun-types", "react"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
